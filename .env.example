# =====================================================
# PAYLOAD CMS CONFIGURATION
# =====================================================

# Secret key para encriptar datos en Payload CMS
# Genera uno seguro con: openssl rand -base64 32
# O visita: https://generate-secret.vercel.app/32
PAYLOAD_SECRET=your_super_secret_key_here_min_32_characters

# =====================================================
# TURSO DATABASE (SQLite Serverless)
# =====================================================

# URL de tu base de datos Turso
# Obtener: turso db show <nombre-db> --url
# Formato: libsql://tu-base-de-datos-nombre.turso.io
TURSO_DATABASE_URL=libsql://your-database-name.turso.io

# Token de autenticación para Turso
# Obtener: turso db tokens create <nombre-db>
TURSO_AUTH_TOKEN=your_turso_auth_token_here

# Push automático del schema a Turso
# false = desarrollo (migraciones manuales)
# true = producción (push automático)
TURSO_PUSH=false

# =====================================================
# CLOUDFLARE R2 STORAGE (Almacenamiento de archivos)
# =====================================================

# Nombre del bucket en Cloudflare R2
# Crear en: https://dash.cloudflare.com -> R2 -> Create bucket
R2_BUCKET_NAME=your-bucket-name

# Access Key ID de Cloudflare R2
# Crear en: Cloudflare Dashboard -> R2 -> Manage R2 API Tokens
R2_ACCESS_KEY_ID=your_r2_access_key_id

# Secret Access Key de Cloudflare R2
# ⚠️ IMPORTANTE: Guarda esto inmediatamente, no podrás verlo de nuevo
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key

# Endpoint de Cloudflare R2
# Formato: https://<ACCOUNT_ID>.r2.cloudflarestorage.com
# Encontrar en: Configuración del bucket -> Settings -> Endpoint
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com

# =====================================================
# NEXT.JS CONFIGURATION (Opcional)
# =====================================================

# URL pública del servidor (para producción)
# Desarrollo: http://localhost:3000
# Producción: https://tu-dominio.com
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# =====================================================
# BUILD CONFIGURATION (Solo para Vercel/Producción)
# =====================================================

# Cliente de libsql para Vercel
# ⚠️ Solo agregar en variables de entorno de Vercel
# LIBSQL_CLIENT=web

